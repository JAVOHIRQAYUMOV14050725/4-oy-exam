<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MVS SMART BOOK SHOP</title>
    <link rel="stylesheet" href="/style/admin.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body style="background-color: #dadae6">
    <header class="header">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="/"
            ><img src="https://www.floricolor.pt/en/en-new/galleriffic-2.0/smart-book/smart-book-01.jpg" width="150" alt="MVC SMART "
          /></a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <!-- Additional links can be added here if needed -->
            </ul>
           
          </div>
        </div>
      </nav>
    </header>

    <section>
      <h1>Mualliflar sahifasi</h1>
      <div class="tbl-header">
        <table cellpadding="0" cellspacing="0" border="0">
          <thead>
            <tr>
              <th>ID</th>
              <th>Ism va familiya</th>
            </tr>
          </thead>
        </table>
      </div>
      <div class="tbl-content">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <% authors.forEach(el => { %>
            <tr>
              <td><%= el.id %></td>
              <td><%= el.fullName %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <!-- Modal trigger button -->
      <button
        type="button"
        class="btn btn-primary"
        data-bs-toggle="modal"
        data-bs-target="#addAuthorModal"
      >
      MUALLIF QO'SHISH
      </button>
    </section>

    <div
      class="modal fade"
      id="addAuthorModal"
      data-bs-backdrop="static"
      data-bs-keyboard="false"
      tabindex="-1"
      aria-labelledby="addAuthorModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="addAuthorModalLabel">
            MUALLIF QO'SHISH
            </h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form id="authorForm" action="/postAuthor" method="post">
              <input
                required
                class="form-control mb-3"
                name="fullName"
                type="text"
                placeholder="Ism va familiyani kiriting"
              />
              <button type="submit" class="btn btn-success">Qo'shish</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <section>
      <h1>KATEGORIYA SAHIFASI</h1>
      <div class="tbl-header">
        <table cellpadding="0" cellspacing="0" border="0">
          <thead>
            <tr>
              <th>Id</th>
              <th>Ism</th>
            </tr>
          </thead>
        </table>
      </div>
      <div class="tbl-content">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <% categories.forEach(el => { %>
            <tr>
              <td><%= el.id %></td>
              <td><%= el.name %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <!-- Modal trigger button -->
      <button
        type="button"
        class="btn btn-primary"
        data-bs-toggle="modal"
        data-bs-target="#addCategoryModal"
      >
      KATEGORIYA QO'SHISH
      </button>
    </section>

    <div
      class="modal fade"
      id="addCategoryModal"
      data-bs-backdrop="static"
      data-bs-keyboard="false"
      tabindex="-1"
      aria-labelledby="addCategoryModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="addCategoryModalLabel">
              
            </h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form id="categoryForm" action="/postCategory" method="post">
              <input
                required
                class="form-control mb-3"
                name="name"
                type="text"
                placeholder="Kategoriya kiriting"
              />
              <button type="submit" class="btn btn-success">Qo'shish</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <section>
      <h1>Mavjud kitoblar </h1>
      <div class="tbl-header">
        <table cellpadding="0" cellspacing="0" border="0">
          <thead>
            <tr>
              <th>Kitob idsi </th>
              <th>Kitob nomi</th>
              <th>Tavsif </th>
              <th>Soni</th>
              <th>Narxi</th>
              <th>Muallif idsi</th>
              <th>kategoriya idsi </th>
              <th>Rasm</th>
            </tr>
          </thead>
        </table>
      </div>
      <div class="tbl-content">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <% books.forEach(el => { %>
            <tr>
              <td><%= el.id %></td>
              <td><%= el.name %></td>
              <td><%= el.desc %></td>
              <td><%= el.count %></td>
              <td><%= el.price %> so'm</td>
              <td><%= el.authorId %></td>
              <td><%= el.categoryId %></td>
              <td>
                <img width="150" height="90" src="<%= el.img %>" alt="<%= el.name %>" />
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <!-- Modal trigger button -->
      <button
        type="button"
        class="btn btn-primary"
        data-bs-toggle="modal"
        data-bs-target="#addBookOrderModal"
      >
      Kitob qo'shish
      </button>
    </section>

    <div
      class="modal fade"
      id="addBookOrderModal"
      data-bs-backdrop="static"
      data-bs-keyboard="false"
      tabindex="-1"
      aria-labelledby="addBookOrderModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="addBookOrderModalLabel">
              
            </h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form id="bookOrderForm" action="/postBook" method="post">
              <h1>kategoriya id va muallif id lariga etiborli bo'lish</h1>
              <input
                required
                class="form-control mb-3"
                name="name"
                type="text"
                placeholder="Nomini kiriting"
              />
              
              <input
                required
                class="form-control mb-3" name="desc" type="text"placeholder="Tavsif kiriting"
              /> <input  required   class="form-control mb-3"   name="count"   type="number"     min="1"   max="10000" placeholder="Sonini kiriting"
              />
              <input  required class="form-control mb-3" name="price" type="number" min="0" placeholder="Narxini kiriting"


              /> <input required  class="form-control mb-3"  name="authorId" type="text"  placeholder="Muallif idsini kiriting"/>
                 <input
              required class="form-control mb-3" name="categoryId" type="text" placeholder="Kategoriya idsini kiriting"
              />
              <input
                required
                class="form-control mb-3"
                name="img"
                type="text"
                placeholder="Rasm linkini kiriting"
              />
              <button type="submit" class="btn btn-success">Qo'shish</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <section>
      <h1>Onlayn sotuv bozori</h1>
      <div class="tbl-header">
        <table cellpadding="0" cellspacing="0" border="0">
          <thead>
            <tr>
              <th> Kitob Idsi</th>
              <th>Mijoz ismi</th>
              <th>Mijoz telefon raqami</th>
              <th>Kitob soni</th>
              <th>Manzil</th>
              <th>Umumiy narx</th>
            </tr>
            
          </thead>
        </table>
      </div>
      <div class="tbl-content">
        <table cellpadding="0" cellspacing="0" border="0">
          <tbody>
            <% order.forEach(el => { %>
            <tr>
              <td><%= el.bookId %></td>
              <td><%= el.clientName %></td>
              <td><%= el.clientPhone %></td>
              <td><%= el.count %></td>
              <td><%= el.address %></td>
              <td><%= el.totalPrice %> sum</td>
            </tr>
    
            <% }) %>
          </tbody>
        </table>
      </div>
    </section>

    <script>
      document
        .getElementById("logoutBtn")
        .addEventListener("click", function () {
          localStorage.removeItem("token");
          window.location.href = "/login";
        });

      window.addEventListener("unload", function () {
        localStorage.removeItem("token");
      });
    </script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
